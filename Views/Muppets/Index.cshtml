@model IEnumerable<MuppetShow.Models.MuppetsTable>

@{
    ViewBag.Title = "Index";
}
    <div class="muppet">
        <h2>the Muppet Show</h2>
    </div>
<p>
    @Html.ActionLink("Create New", "Create",new {@type="button" },new {@class="btn btn-primary" })
</p>
<table class="table table-hover table-responsive"  id="myTable">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.firstAppearance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.video)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.likes)
        </th>
        <th></th>
        <th></th>
       
    </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.firstAppearance)
                </td>
                <td>
                    <a href="~/Content/images/@item.image" target="_blank"><img src="~/Content/images/@Html.DisplayFor(modelItem => item.image)" height="90px"/></a>
                </td>
                <td>
                    <iframe src="https://www.youtube.com/embed/@item.video" width="180" height="140" controls></iframe>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.likes)
                </td>
                <td>
                    <button type="submit" class="btn btn-outline-primary"> <i class="fa fa-thumbs-up"> @Html.ActionLink("Like", "Like", new { id = item.Id })</i></button>

                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-warning" })
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready( function () {
    $('#myTable').DataTable();
} );
</script>
